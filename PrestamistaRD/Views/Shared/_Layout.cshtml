@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var usuario = HttpContextAccessor.HttpContext!.Session.GetString("Nombre");
    var rol = HttpContextAccessor.HttpContext!.Session.GetString("Rol");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrestamistaRD</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrestamistaRD.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background: #f4f6f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background: linear-gradient(90deg, #0d6efd, #6610f2);
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
        }

        .nav-link, .dropdown-item {
            color: #fff !important;
            font-weight: 500;
        }

            .nav-link:hover, .dropdown-item:hover {
                color: #ffe066 !important;
            }

        .content-wrapper {
            padding: 2rem;
        }

        footer {
            background: #fff;
            border-top: 1px solid #ddd;
            padding: 1rem;
            text-align: center;
            font-size: 0.9rem;
            color: #666;
        }

        /* 🔹 Notificación moderna tipo tarjeta */
        .toast-card-container {
            position: fixed;
            top: 1.2rem;
            right: 1.2rem;
            z-index: 2000;
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .toast-card {
            background: #fff;
            color: #333;
            border-radius: 14px;
            box-shadow: 0 6px 16px rgba(0,0,0,0.15);
            display: flex;
            align-items: center;
            gap: 14px;
            padding: 18px 24px;
            min-width: 360px;
            max-width: 420px;
            font-size: 1.05rem;
            font-weight: 500;
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateX(120%);
            transition: all 0.4s ease;
        }

            .toast-card.show {
                opacity: 1;
                transform: translateX(0);
            }

            .toast-card i {
                font-size: 1.8rem;
            }

            .toast-card.success i {
                color: #28a745;
            }

            .toast-card.error i {
                color: #dc3545;
            }

            .toast-card.info i {
                color: #0d6efd;
            }

        /* Barra de progreso */
        .toast-progress {
            position: absolute;
            bottom: 0;
            left: 0;
            height: 6px;
            background: rgba(0,0,0,0.05);
            width: 100%;
        }

            .toast-progress .bar {
                height: 100%;
                background: #28a745;
                transform: scaleX(0);
                transform-origin: left;
                animation: fillBar linear forwards;
            }

        .toast-card.error .bar {
            background: #dc3545;
        }

        .toast-card.info .bar {
            background: #0d6efd;
        }

        @@keyframes fillBar {
            from {
                transform: scaleX(0);
            }

            to {
                transform: scaleX(1);
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PrestamistaRD</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Clientes" asp-action="Index"><i class="bi bi-people"></i> Clientes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Prestamos" asp-action="Index"><i class="bi bi-cash-coin"></i> Préstamos</a></li>
                    <!-- 🔹 Nuevo enlace -->
                    <li class="nav-item"><a class="nav-link" asp-controller="Prestamos" asp-action="Pagados"><i class="bi bi-check2-all"></i> Préstamos Pagados</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Pagos" asp-action="Index"><i class="bi bi-receipt"></i> Pagos</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Reportes" asp-action="Index"><i class="bi bi-graph-up"></i> Reportes</a></li>
                </ul>
                <ul class="navbar-nav">
                    @if (usuario != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @usuario (@rol)
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item text-danger fw-bold" href="#" onclick="confirmLogout(event)">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Cuenta" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i> Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido -->
    <div class="content-wrapper">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer>
        © @DateTime.Now.Year - PrestamistaRD | Todos los derechos reservados
    </footer>

    <!-- 🔹 Notificaciones -->
    <div class="toast-card-container">
        @if (TempData["Mensaje"] != null)
        {
            <div class="toast-card success show">
                <i class="bi bi-check-circle"></i>
                <span>@TempData["Mensaje"]</span>
                <div class="toast-progress"><div class="bar" style="animation-duration: 5s;"></div></div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="toast-card error show">
                <i class="bi bi-x-circle"></i>
                <span>@TempData["Error"]</span>
                <div class="toast-progress"><div class="bar" style="animation-duration: 5s;"></div></div>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="toast-card info show">
                <i class="bi bi-info-circle"></i>
                <span>@TempData["Info"]</span>
                <div class="toast-progress"><div class="bar" style="animation-duration: 5s;"></div></div>
            </div>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // 🔹 Confirmación moderna antes de cerrar sesión
        function confirmLogout(e) {
            e.preventDefault();
            Swal.fire({
                title: "¿Cerrar sesión?",
                text: "Se cerrará tu sesión actual en PrestamistaRD.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#dc3545",
                cancelButtonColor: "#6c757d",
                confirmButtonText: "Sí, salir",
                cancelButtonText: "Cancelar"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Logout", "Cuenta")';
                }
            });
        }

        // Auto ocultar las notificaciones después de 5s
        document.addEventListener("DOMContentLoaded", function () {
            const toasts = document.querySelectorAll(".toast-card");
            toasts.forEach(t => {
                setTimeout(() => {
                    t.classList.remove("show");
                }, 5000);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
