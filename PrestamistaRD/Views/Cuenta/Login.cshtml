@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - PrestamistaRD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
            overflow: hidden;
        }

            /* 🔹 Animación background */
            body::before {
                content: "";
                position: absolute;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle at 20% 30%, rgba(255,255,255,0.15), transparent 40%), radial-gradient(circle at 80% 70%, rgba(255,255,255,0.1), transparent 40%);
                animation: floatBg 18s linear infinite;
            }

        @@keyframes floatBg {
            from

        {
            transform: translate(0,0);
        }

        to {
            transform: translate(-20%, -20%);
        }

        }

        .login-card {
            background: rgba(255, 255, 255, 0.92);
            border-radius: 24px;
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.25);
            padding: 3rem 3rem 2.5rem 3rem;
            max-width: 650px;
            width: 100%;
            backdrop-filter: blur(14px);
            transform-style: preserve-3d;
            transition: transform 0.3s ease;
        }

            .login-card:hover {
                transform: rotateX(6deg) rotateY(-6deg) scale(1.02);
            }

            .login-card h3 {
                font-weight: 700;
                color: #0d6efd;
            }

        .btn-login {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            border: none;
            border-radius: 50px;
            font-weight: 600;
            padding: 1rem;
            transition: 0.3s;
            font-size: 1.1rem;
        }

            .btn-login:hover {
                background: linear-gradient(135deg, #6610f2, #0d6efd);
                transform: scale(1.06);
                box-shadow: 0 8px 20px rgba(0,0,0,0.25);
            }

        .form-control {
            border-radius: 14px;
            padding: 1rem;
            font-size: 1.05rem;
        }

        label i {
            margin-right: 6px;
        }

        .icon-mail {
            color: #0d6efd;
        }

        .icon-pass {
            color: #dc3545;
        }

        /* Glow input focus */
        .form-control:focus {
            box-shadow: 0 0 12px rgba(13, 110, 253, 0.3);
            border-color: #0d6efd;
        }

        /* Animación del ícono principal */
        .icon-main {
            font-size: 4rem;
            color: #6610f2;
            animation: pulseIcon 2.5s infinite ease-in-out;
        }

        @@keyframes pulseIcon {
            0%, 100%

        {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.2);
            opacity: 0.8;
        }

        }
    </style>
</head>
<body>
    <div class="login-card text-center" data-aos="zoom-in" data-aos-duration="1200">
        <div class="mb-4" data-aos="flip-left" data-aos-delay="200">
            <i class="bi bi-building-fill-lock icon-main"></i>
        </div>
        <h3 data-aos="fade-up">PrestamistaRD</h3>
        <p class="text-muted" data-aos="fade-up" data-aos-delay="200">Accede a tu cuenta</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger py-2" data-aos="fade-down">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post" class="mt-4" data-aos="fade-up" data-aos-delay="300">
            <div class="form-floating mb-3">
                <input type="email" name="correo" class="form-control" id="correo" placeholder="correo@ejemplo.com" required />
                <label for="correo"><i class="bi bi-envelope-paper icon-mail"></i> Correo</label>
            </div>
            <div class="form-floating mb-4">
                <input type="password" name="clave" class="form-control" id="clave" placeholder="Contraseña" required />
                <label for="clave"><i class="bi bi-shield-lock icon-pass"></i> Contraseña</label>
            </div>
            <button type="submit" class="btn btn-login w-100 text-white" data-aos="zoom-in" data-aos-delay="400">
                <i class="bi bi-door-open-fill"></i> Ingresar
            </button>
        </form>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true,
            offset: 120,
            easing: 'ease-in-out'
        });
    </script>
</body>
</html>
