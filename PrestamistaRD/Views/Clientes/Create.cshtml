@model PrestamistaRD.Models.Cliente
@{
    ViewData["Title"] = "Nuevo Cliente";
}

<div class="container mt-4" data-aos="fade-up">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4" data-aos="zoom-in">
                <!-- 🔹 Encabezado con degradado (idéntico al de tu ejemplo) -->
                <div class="card-header header-gradient text-white rounded-top-4 d-flex align-items-center justify-content-center" data-aos="fade-down">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-person-plus-fill me-2"></i> Nuevo Cliente
                    </h3>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post" id="clienteForm" data-aos="fade-up" data-aos-delay="200">
                        <!-- Nombre -->
                        <div class="mb-3" data-aos="fade-right">
                            <label asp-for="NombreCompleto" class="form-label fw-bold">
                                <i class="bi bi-person-vcard text-primary"></i> Nombre Completo
                            </label>
                            <input asp-for="NombreCompleto" class="form-control" required placeholder="Ej: Juan Pérez" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>

                        <!-- Cédula -->
                        <div class="mb-3" data-aos="fade-left" data-aos-delay="100">
                            <label asp-for="Cedula" class="form-label fw-bold">
                                <i class="bi bi-credit-card-2-front text-success"></i> Cédula
                            </label>
                            <input asp-for="Cedula" class="form-control" id="Cedula" maxlength="13" required placeholder="Ej: 001-1234567-8" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>

                        <!-- Teléfono -->
                        <div class="mb-3" data-aos="fade-right" data-aos-delay="200">
                            <label asp-for="Telefono" class="form-label fw-bold">
                                <i class="bi bi-telephone text-warning"></i> Teléfono
                            </label>
                            <input asp-for="Telefono" class="form-control" id="Telefono" maxlength="12" required placeholder="Ej: 809-555-5555" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <!-- Dirección -->
                        <div class="mb-3" data-aos="fade-left" data-aos-delay="300">
                            <label asp-for="Direccion" class="form-label fw-bold">
                                <i class="bi bi-geo-alt text-danger"></i> Dirección
                            </label>
                            <textarea asp-for="Direccion" class="form-control" rows="2" placeholder="Ej: Av. Duarte #123, Santo Domingo"></textarea>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4" data-aos="zoom-in" data-aos-delay="400">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle text-secondary"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save text-light"></i> Guardar Cliente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function maskCedula(input) {
            let value = input.value.replace(/\D/g, "");
            if (value.length > 3 && value.length <= 10)
                value = value.replace(/(\d{3})(\d+)/, "$1-$2");
            else if (value.length > 10)
                value = value.replace(/(\d{3})(\d{7})(\d+)/, "$1-$2-$3");
            input.value = value;
        }

        function maskTelefono(input) {
            let value = input.value.replace(/\D/g, "");
            if (value.length > 3 && value.length <= 6)
                value = value.replace(/(\d{3})(\d+)/, "$1-$2");
            else if (value.length > 6)
                value = value.replace(/(\d{3})(\d{3})(\d+)/, "$1-$2-$3");
            input.value = value;
        }

        document.getElementById("Cedula").addEventListener("input", function () {
            maskCedula(this);
        });
        document.getElementById("Telefono").addEventListener("input", function () {
            maskTelefono(this);
        });

        // 🔹 Validación antes de enviar
        document.getElementById("clienteForm").addEventListener("submit", function (e) {
            const cedula = document.getElementById("Cedula").value.replace(/\D/g, "");
            const telefono = document.getElementById("Telefono").value.replace(/\D/g, "");

            if (cedula.length !== 11) {
                alert("La cédula debe tener 11 dígitos.");
                e.preventDefault();
            }
            if (telefono.length !== 10) {
                alert("El teléfono debe tener 10 dígitos.");
                e.preventDefault();
            }
        });
    </script>

    <!-- 🔹 AOS Animations -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 900,
            offset: 100,
            easing: 'ease-in-out',
            once: true
        });
    </script>

    <style>
        /* 🔹 Encabezado con degradado y esquinas redondeadas */
        .header-gradient {
            background: linear-gradient(90deg, #3b82f6 0%, #22c55e 100%);
            border: 0;
            padding: 0.9rem 1.25rem;
        }
    </style>
}
