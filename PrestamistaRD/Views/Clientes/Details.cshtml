@model PrestamistaRD.Models.Cliente
@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container mt-5" data-aos="fade-up">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4" data-aos="zoom-in">
                <div class="card-header bg-primary text-white text-center rounded-top-4" data-aos="fade-down">
                    <h4 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i> Detalles del Cliente
                    </h4>
                </div>

                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted" data-aos="fade-right">
                            <i class="bi bi-person text-primary"></i> Nombre
                        </dt>
                        <dd class="col-sm-8 fw-semibold" data-aos="fade-left">@Model.NombreCompleto</dd>

                        <dt class="col-sm-4 text-muted" data-aos="fade-right">
                            <i class="bi bi-credit-card text-dark"></i> Cédula
                        </dt>
                        <dd class="col-sm-8" data-aos="fade-left">@Model.Cedula</dd>

                        <dt class="col-sm-4 text-muted" data-aos="fade-right">
                            <i class="bi bi-telephone text-success"></i> Teléfono
                        </dt>
                        <dd class="col-sm-8" data-aos="fade-left">@Model.Telefono</dd>

                        <dt class="col-sm-4 text-muted" data-aos="fade-right">
                            <i class="bi bi-geo-alt text-danger"></i> Dirección
                        </dt>
                        <dd class="col-sm-8" data-aos="fade-left">@Model.Direccion</dd>

                        <dt class="col-sm-4 text-muted" data-aos="fade-right">
                            <i class="bi bi-flag text-secondary"></i> Estado
                        </dt>
                        <dd class="col-sm-8" data-aos="fade-left">
                            @if (Model.Estado)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle"></i> Inactivo
                                </span>
                            }
                        </dd>
                    </dl>
                </div>

                <div class="card-footer bg-light d-flex justify-content-between" data-aos="fade-up">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                        <i class="bi bi-arrow-left-circle"></i> Volver
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill text-dark">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- 🔹 AOS Animations -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 900,
            offset: 100,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}
